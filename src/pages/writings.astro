---
	import BaseLayout from '../layouts/BaseLayout.astro';
	import BlogPost from '../components/BlogPost.astro';
	const allPosts = await Astro.glob('../pages/posts/*.md');
	const pageTitle = "Writings";

	const sortedChronologically = allPosts.sort((postA, postB) => {
		const postADate = new Date(postA.frontmatter.pubDate);
		const postBDate = new Date(postB.frontmatter.pubDate)
		return postBDate - postADate;
	})

	const formatDate = (date: Date) => {
		const dateToUse = new Date(date);
		return new Intl.DateTimeFormat('en-US', { dateStyle: 'medium' }).format(dateToUse)
	}
---

<BaseLayout pageTitle={pageTitle}>
	<h2>Newest to oldest</h2>
	<ul>
		{sortedChronologically.map((post) =>
		<BlogPost url={post.url} title={post.frontmatter.title} date={formatDate(post.frontmatter.pubDate)} />)}
	</ul>
	<script>
		import "../scripts/menu.ts"
	</script>
</BaseLayout>

<style>
	h2 {
		margin: 12px 0;
	}

	ul {
		list-style: none;
		padding: 0;
	}
</style>